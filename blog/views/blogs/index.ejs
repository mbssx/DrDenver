<% include ../partials/header %>

<div id="blog-index" class="container">
<div class="row" style="display: flex; flex-wrap:wrap;">
  <% blogs.forEach(function(blog){ %>
      <div class="col-lg-12">
        <div class="ui medium rounded items">
        <div class="item">
          <div class="image">
            <img src="<%= blog.image %>">
          </div>
        <div class="content">
          <a class="header" href="/blogs/<%= blog._id %>"><%=blog.title%></a>
          <div class="meta">
          <span><%= blog.created.toDateString() %></span>
          </div>

          <div class="extra">
            <% if(blog.body && blog.body.length > 0) { %>
            <p><%- blog.body.substring(0, 120) %> ... </p>
            <% } %>
            <a href="/blogs/<%= blog._id %>">Read More</a>
          </div>
      </div>
    </div>
      </div>
    </div>
  <% }) %>
</div>

 <% if(currentUser && currentUser.isAdmin){ %>
<div class = "container">
   <div class="col-sm-2">    
    <a class ="ui violet big basic button" style="margin:auto; display:block"  href="/blogs/new %>">New post</a>
   </div>
 </div>
 <% } %>
 
<% include ../partials/footer %>